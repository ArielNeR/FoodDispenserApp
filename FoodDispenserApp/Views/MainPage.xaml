<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="FoodDispenserApp.MainPage"
             Title="Food Dispenser Monitor">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- Estado de conexión -->
            <Label Text="Estado de Conexión:" FontSize="Medium" />
            <Label Text="{Binding ConnectionStatus}" FontAttributes="Bold" TextColor="Green"/>

            <!-- Datos de sensores -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <StackLayout>
                    <Label Text="Temperatura:" />
                    <Label Text="{Binding Temperatura}" FontSize="Large" />
                </StackLayout>
                <StackLayout>
                    <Label Text="Humedad:" />
                    <Label Text="{Binding Humedad}" FontSize="Large" />
                </StackLayout>
                <StackLayout>
                    <Label Text="Ultrasonido:" />
                    <Label Text="{Binding Ultrasonido}" FontSize="Large" />
                </StackLayout>
            </StackLayout>

            <!-- Botón para refrescar (opcional, MQTT envía en tiempo real) -->
            <Button Text="Refrescar Datos" Command="{Binding RefreshCommand}" />

            <!-- Botón para ver/editar horarios -->
            <Button Text="Ver/Editar Horarios" Clicked="OnHorariosClicked" />

            <!-- Gráficos -->
            <Label Text="Gráfico de Temperatura" FontSize="Medium" />
            <chart:ChartView Chart="{Binding TemperaturaChart}" HeightRequest="200" />

            <Label Text="Gráfico de Humedad" FontSize="Medium" />
            <chart:ChartView Chart="{Binding HumedadChart}" HeightRequest="200" />

            <Label Text="Gráfico de Ultrasonido" FontSize="Medium" />
            <chart:ChartView Chart="{Binding UltrasonidoChart}" HeightRequest="200" />
        </StackLayout>
    </ScrollView>
</ContentPage>
