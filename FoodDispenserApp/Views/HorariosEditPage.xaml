<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodDispenserApp.Views.HorariosEditPage"
             Title="Editar Horarios">
    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Título -->
        <Label Grid.Row="0" 
               Text="Editar Horarios" 
               FontSize="24" 
               FontFamily="OpenSansSemibold" 
               HorizontalOptions="Start" />

        <!-- Lista editable -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="15">
                <CollectionView ItemsSource="{Binding Horarios}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="{StaticResource NetflixDarkGray}" 
                                   CornerRadius="10" 
                                   Padding="15">
                                <Grid ColumnDefinitions="*,*,*,Auto" RowDefinitions="Auto" ColumnSpacing="10">
                                    <Entry Grid.Column="0" 
                                           Text="{Binding Hora, Mode=TwoWay}" 
                                           Keyboard="Numeric" 
                                           Placeholder="Hora" 
                                           TextColor="{StaticResource NetflixWhite}" 
                                           BackgroundColor="Transparent" />
                                    <Entry Grid.Column="1" 
                                           Text="{Binding Minuto, Mode=TwoWay}" 
                                           Keyboard="Numeric" 
                                           Placeholder="Min" 
                                           TextColor="{StaticResource NetflixWhite}" 
                                           BackgroundColor="Transparent" />
                                    <Entry Grid.Column="2" 
                                           Text="{Binding Duracion, Mode=TwoWay}" 
                                           Keyboard="Numeric" 
                                           Placeholder="Duración" 
                                           TextColor="{StaticResource NetflixWhite}" 
                                           BackgroundColor="Transparent" />
                                    <Button Grid.Column="3" 
                                            Text="X" 
                                            FontSize="12" 
                                            Padding="5" 
                                            BackgroundColor="{StaticResource NetflixRed}" 
                                            Clicked="OnDeleteHorarioClicked" 
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Agregar Horario" Clicked="OnAddHorarioClicked" Margin="0,10,0,0" />
                <Button Text="Guardar" Command="{Binding UpdateHorariosCommand}" Margin="0,10,0,0" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>