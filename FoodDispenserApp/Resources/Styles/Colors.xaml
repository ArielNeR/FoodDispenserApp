<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colores estilo Netflix -->
    <Color x:Key="NetflixBlack">#141414</Color>
    <Color x:Key="NetflixRed">#E50914</Color>
    <Color x:Key="NetflixWhite">#E5E5E5</Color>
    <Color x:Key="NetflixGray">#808080</Color>
    <Color x:Key="NetflixDarkGray">#404040</Color>

    <!-- Colores existentes que mantendremos -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray900">#212121</Color>

    <!-- Pinceles -->
    <SolidColorBrush x:Key="NetflixBlackBrush" Color="{StaticResource NetflixBlack}"/>
    <SolidColorBrush x:Key="NetflixRedBrush" Color="{StaticResource NetflixRed}"/>
    <SolidColorBrush x:Key="NetflixWhiteBrush" Color="{StaticResource NetflixWhite}"/>
    <SolidColorBrush x:Key="NetflixGrayBrush" Color="{StaticResource NetflixGray}"/>
</ResourceDictionary>