<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Estilo global para páginas -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource NetflixBlack}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Estilo para etiquetas -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource NetflixWhite}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Estilo para botones -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource NetflixRed}" />
        <Setter Property="TextColor" Value="{StaticResource NetflixWhite}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="MinimumHeightRequest" Value="50" />
    </Style>

    <!-- Estilo para NavigationPage -->
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource NetflixBlack}" />
        <Setter Property="BarTextColor" Value="{StaticResource NetflixWhite}" />
    </Style>
</ResourceDictionary>